<?xml version='1.0' encoding='utf-8'?>
<widget id="com.smartbar.smartprint"
        version="1.0.0"
        xmlns="http://www.w3.org/ns/widgets"
        xmlns:cdv="http://cordova.apache.org/ns/1.0"
        xmlns:android="http://schemas.android.com/apk/res/android">

  <name>SmartPrint</name>
  <description>Impresión automática para POS</description>
  <author email="you@example.com">You</author>

  <!-- Preferencias Cordova -->
  <preference name="AndroidPersistentFileLocation" value="Compatibility" />
  <preference name="BackgroundMode" value="enabled" />
  <preference name="AutoHideSplashScreen" value="true" />

  <!-- (Opcional pero recomendado) Declarar el hook -->
  <hook type="after_prepare" src="hooks/after_prepare/010-fix-exported.js" />

  <!-- Puedes añadir aquí preferencias de Android si las necesitas -->
  <platform name="android">
    <preference name="android-minSdkVersion" value="24" />
    <preference name="android-targetSdkVersion" value="35" />
    <preference name="android-compileSdkVersion" value="35" />

    <!-- (Opcional) Permisos vía edit-config si tu app los requiere -->
